@model ListadoBecasApp.DTOs.BecaDto

@{
    ViewData["Title"] = "Create";
}

<h2 class="text-center" style="color: #28a745;">Crear Beca</h2>
<hr />
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="Create" class="border p-4 rounded shadow">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="form-group">
                    <label asp-for="NombreBeca" class="control-label label-small">Nombre</label>
                    <input asp-for="NombreBeca" class="form-control input-small" placeholder="Nombre de la Beca" style="width: 100%;" />
                    <span asp-validation-for="NombreBeca" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Descripcion" class="control-label label-small">Descripción</label>
                    <input asp-for="Descripcion" class="form-control input-small" placeholder="Descripción de la Beca" style="width: 100%;" />
                    <span asp-validation-for="Descripcion" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="PorcentajeBeca" class="control-label label-small">Porcentaje de beca</label>
                    <input asp-for="PorcentajeBeca" class="form-control input-small" placeholder="Porcentaje de la Beca" style="width: 100%;" />
                    <span asp-validation-for="PorcentajeBeca" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="FechaInicio" class="control-label label-small">Fecha de inicio</label>
                    <input asp-for="FechaInicio" type="date" class="form-control input-small" style="width: 100%;" />
                    <span asp-validation-for="FechaInicio" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="FechaFin" class="control-label label-small">Fecha fin</label>
                    <input asp-for="FechaFin" type="date" class="form-control input-small" style="width: 100%;" />
                    <span asp-validation-for="FechaFin" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="IdCarrera" class="control-label label-small">Carrera</label>
                    <select asp-for="IdCarrera"
                            asp-items="@(new SelectList(ViewBag.Carreras, "IdCarrera", "NombreCarrera"))"
                            class="form-control">
                        <option value="">Seleccione una carrera</option>
                    </select>
                    <span asp-validation-for="IdCarrera" class="text-danger"></span>
                </div>

                <div class="form-group d-flex justify-content-center mt-4">
                    <input type="submit" value="Crear" class="btn" style="background-color: #28a745; color: #fff; margin-right: 10px;" />
                    <a asp-action="Administrations" class="btn btn-secondary" style="background-color: #6c757d; color: #fff;">Cancelar</a>
                </div>
            </form>
        </div>
    </div>
</div>
@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
        {
            <p>@error.ErrorMessage</p>
        }
    </div>
}


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
