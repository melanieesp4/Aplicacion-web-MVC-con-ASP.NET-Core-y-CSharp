
@model IEnumerable<ListadoBecasApp.DTOs.BecaDto>


@{
    ViewData["Title"] = "Administrations";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css">

<div class="container mt-3">
    <h1>Administrador</h1>

    <p class="text-right">
        <a class="btn btn-info" asp-action="Create">Crear nueva beca</a>
    </p>

    <table class="table">
        <thead>
            <tr>
                <th>
                    <a asp-action="Administrations" asp-route-sortOrder="@ViewBag.NombreSort">Nombre de la beca</a>
                </th>
                <th>
                    <a asp-action="Administrations" asp-route-sortOrder="@ViewBag.PorcentajeSort">Porcentaje</a>
                </th>
                <th>
                    <a asp-action="Administrations" asp-route-sortOrder="@ViewBag.CarreraSort">Carrera</a>
                </th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.NombreBeca)</td>
                    <td>@Html.DisplayFor(modelItem => item.PorcentajeBeca) %</td>
                    <td>@(string.IsNullOrWhiteSpace(item.NombreCarrera) ? "Sin Carrera" : item.NombreCarrera)</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.IdBeca" class="btn btn-warning" title="Editar">
                            <i class="fas fa-pencil-alt"></i>
                        </a>
                        <a asp-action="Details" asp-route-id="@item.IdBeca" class="btn btn-info" title="Detalles">
                            <i class="fas fa-info-circle"></i>
                        </a>
                        <a asp-action="Delete" asp-route-id="@item.IdBeca" class="btn btn-danger" title="Eliminar">
                            <i class="fas fa-trash-alt"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<script src="~/js/sortindicators.js"></script>
